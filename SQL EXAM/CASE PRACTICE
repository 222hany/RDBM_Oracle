//직원의 급여가 5000 이상인 경우 "고액"으로 표시 그 외는 "보통"으로 표시
SELECT ENAME, SALARY,
CASE --여러 조건을 비교할 수 있고, 조건을 만족하는 경우 다른 결과 반환
WHEN SALARY >= 5000 THEN '고액' --급여가 5000 이상인 경우 '고액'을 반환
ELSE '보통' --위 조건에 해당하지 않는 경우 '보통'으로 반환
END AS SALARY_INFO --END : CASE문의 끝을 나타내는 키워드
FROM EMPLOYEE;

SELECT ENAME, JOB, SALARY,
CASE JOB
WHEN 'MANAGER' THEN SALARY * 0.15 --직급에 따라 보너스 계산
WHEN 'DEVELOPER' THEN SALARY * 0.1
WHEN 'SALESMAN' THEN SALARY * 0.05
ELSE 0
END AS BONUS
FROM EMPLOYEE;

//급여 범위 지정 5000 이상 '고액' 3000 이상 '중간'
SELECT ENAME, SALARY,
CASE
WHEN SALARY >= 5000 THEN '고액'
WHEN SALARY >= 3000 THEN '중간'
ELSE NULL
END AS SAL_INFO
FROM EMPLOYEE;

//직원의 입사한 연도에 따른 경력 계산 WHEN EXTRACT(YEAR FROM HIREDATE) = 2021 THEN '1년미만' 2022 THEN '1년'
SELECT ENAME, HIREDATE,
CASE
WHEN EXTRACT(YEAR FROM HIREDATE) = 2023 THEN '1년미만'
WHEN EXTRACT(YEAR FROM HIREDATE) = 2022 THEN '1년'
ELSE '1년이상'
END AS HIRE_INFO
FROM EMPLOYEE;

//직원의 급여를 천 단위로 반올림
SELECT ENAME, ROUND(SALARY, -2) AS R_SAL FROM EMPLOYEE;

//직원의 급여에 따른 등급 지정
SELECT ENAME, SALARY,
CASE
WHEN SALARY BETWEEN 700 AND 1200 THEN '1'
WHEN SALARY BETWEEN 1201 AND 1400 THEN '2'
WHEN SALARY BETWEEN 1401 AND 2000 THEN '3'
WHEN SALARY BETWEEN 2001 AND 3000 THEN '4'
WHEN SALARY BETWEEN 3001 AND 9999 THEN '5'
ELSE '6'
END AS SAL_GRADE
FROM EMPLOYEE;

//부서별 직원 수 계산 및 부서 유형 지정 3명 '중규모' 5명 '대규모'
SELECT DNO, COUNT(*),
CASE
WHEN COUNT(*) >= 3 THEN '중규모'
WHEN COUNT(*) >= 5 THEN '대규모'
ELSE '소규모'
END AS NUM_EMP
FROM EMPLOYEE GROUP BY DNO;

//직원의 입사 월에 따른 경력 계산 10월 '1개월' 9월 '2개월' 나머지 '3개월 이상'
SELECT ENAME, HIREDATE,
CASE
WHEN EXTRACT(MONTH FROM HIREDATE) = 10 THEN '1개월'
WHEN EXTRACT(MONTH FROM HIREDATE) = 09 THEN '2개월'
ELSE '3개월 이상'
END AS HIRE_INFO
FROM EMPLOYEE;
