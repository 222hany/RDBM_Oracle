CREATE TABLE PARENTS_TABLE(
PARENT_ID INT PRIMARY KEY
);

CREATE TABLE CHILD_TABLE(
CHILD_ID INT PRIMARY KEY,
PARENT_ID INT,
FOREIGN KEY(PARENT_ID) REFERENCES PARENTS_TABLE(PARENT_ID)
ON DELETE CASCADE);

//부모 테이블에 데이터 추가
INSERT INTO PARENTS_TABLE(PARENT_ID)
VALUES(1);

//자식 테이블에 데이터 추가
INSERT INTO CHILD_TABLE(CHILD_ID, PARENT_ID)
VALUES(1,1);
INSERT INTO CHILD_TABLE(CHILD_ID, PARENT_ID)
VALUES(2,1);

//부모 테이블에서 특정 행 삭제
DELETE FROM PARENTS_TABLE WHERE PARENT_ID = 1;
